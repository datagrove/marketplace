  <div class="flex flex-col items-center px-2 md:px-0 md:flex-wrap lg:flex-row border-2">
    <div class="mt-6 mb-6 md:mb-0 md:w-2/3 lg:w-1/2">
      <div>
        <h1 class="text-3xl font-bold text-htext1 dark:text-htext1-DM">{t(`homePageText.headline`)}</h1>
        <p class="text-lg my-6">{t(`homePageText.subHeadline`)}</p>
      </div>
      <div class="text-2xl font-bold text-link1 dark:text-link1-DM justify-center items-start flex md:grid grid-cols-8 gap-2 mb-6">
        <a
          href={`/${lang}/services`}
          class="w-[112px] h-[112px] flex flex-col justify-center items-center align-center rounded-xl bg-btn1 dark:bg-btn1-DM drop-shadow-md shadow-md border-b-2 border-shadow-LM dark:border-shadow-DM shadow-shadow-LM dark:shadow-shadow-DM md:col-start-1 md:row-start-1 md:w-24 md:h-24 -space-y-8 hover:translate-y-0.5"
        >
          <div class="flex pr-3">
