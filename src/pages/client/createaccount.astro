---
import Layout from "../../layouts/PageLayout.astro";
import { ClientRegistration } from "../../components/users/ClientRegistration";
import { getLangFromUrl, useTranslations } from "../../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout pageTitle={t("pageTitles.createClientAccount")}>
  <div class="border border-border1 dark:border-border1-DM rounded flex flex-col items-center w-96">
    <h1 class="text-xl text-htext1 dark:text-htext1-DM py-4">
      {t("pageTitles.createClientAccount")}
    </h1>
    <div class="w-full px-6 py-4">
      <ClientRegistration client:only="solid-js" />
    </div>
  </div>
</Layout>
